# Frontend Trio - Example environment file

# Public client config
# Leave empty to use Next API routes (/api/...) [[memory:5493869]]
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_API_TIMEOUT=30000

# Auth/middleware
AUTH_TOKEN=change_me_with_a_strong_secret

# Upstream backend (must be HTTPS)
BACK_URL=https://your-backend.example.com
ENV=development

# mTLS (inline PEM; recommended on Vercel)
BACKEND_CLIENT_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----\n"
BACKEND_CLIENT_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Optional private CA
# BACKEND_CA_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----\n"

# Local/dev alternative (not for Vercel functions)
# BACKEND_CLIENT_CERT_FILE=./certs/client.crt
# BACKEND_CLIENT_KEY_FILE=./certs/client.key
# BACKEND_CA_CERT_FILE=./certs/ca.crt

# TLS verification
BACKEND_TLS_INSECURE=false

